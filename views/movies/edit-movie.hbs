<h1>{{movie.title}}</h1>

<form action="/movies/edit/{{movie._id}}" method="POST">
  <label>
    Title:
    <input type="text" name="title" value={{movie.title}} />
  </label>

  <label>
    Genre:
    <input type="text" name="genre" value={{movie.genre}} />
  </label>

  <label>
    Plot:
    <textarea type="text" name="plot"> {{movie.plot}}</textarea>
  </label>

  <label>
    Cast:
    <select name="cast" multiple>
      <option disable selected value=""></option>
      {{#each remainingCelebrities}}
        <option value="{{_id}}"> {{name}} </option>
      {{/each}}

      {{#each starringCelebrities}}
        <option value="{{_id}}" selected> {{name}} </option>
      {{/each}}

    </select>
  </label>
  <br />

  <button type="submit"> Edit movie </button>

</form>